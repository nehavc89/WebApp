     pipeline {
        agent none
        tools {
          maven 'maven'
        }
   
        stages {
        
          stage("1. Maven build") {
             agent any
             steps {
               sh 'mvn compile'
               }
             }
           stage("2.build & SonarQube analysis") {
            agent any
            steps {
              withSonarQubeEnv("sonarqube"){
              
                sh 'mvn package sonar:sonar'
              }
              }
          }
           
       
          }
       }
        
