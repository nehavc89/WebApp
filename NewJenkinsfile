     pipeline {
        agent none
        tools {
          maven 'maven'
        }
   
        stages {
        
          stage("1. Maven build") {
             agent any
             steps {
               sh 'mvn compile'
               }
             }
           stage("build & SonarQube analysis") {
            agent any
            steps {
              withSonarQubeEnv('My SonarQube Server') {
                sh 'mvn clean package sonarqube:sonarqube'
              }
            }
          }
           
       
          }
       }
        
